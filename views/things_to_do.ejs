    <form id="comment-form" action="/comments" method="POST">
        <label for="comment-text">Add a comment:</label>
        <textarea id="comment-text" name="text" rows="4" cols="50" required></textarea>
        <button type="submit">Submit</button>
      </form>
    
        <script>
            const commentForm = document.getElementById('comment-form');
            const commentText = document.getElementById('comment-text');
          
            commentForm.addEventListener('submit', async (event) => {
              event.preventDefault();
          
              const text = commentText.value;
          
              try {
                const response = await fetch('/comments', {
                  method: 'POST',
                  headers: {
                    'Content-Type': 'application/json'
                  },
                  body: JSON.stringify({ text })
                });
          
                if (response.ok) {
                  const comment = await response.json();
                  const commentsList = document.getElementById('comments-list');
                  const newComment = document.createElement('li');
                  newComment.innerHTML = `
                    <p>${comment.text}</p>
                    <p>Posted by <a href="/profil">${comment.user.username}</a> on ${new Date(comment.createdAt).toLocaleString()}</p>
                  `;
                  commentsList.appendChild(newComment);
                  commentText.value = '';
                } else {
                  console.error(await response.json());
                }
              } catch (error) {
                console.error(error);
              }
            });
          
            // Fetch comments from the server and display them
            async function fetchComments() {
              const response = await fetch('/things_to_do');
              const data = await response.json();
              const commentsList = document.getElementById('comments-list');
          
              data.comments.forEach(comment => {
                const commentElement = document.createElement('li');
                commentElement.innerHTML = `
                  <p>${comment.text}</p>
                  <p>Posted by <a href="/profil">${comment.user.username}</a> on ${new Date(comment.createdAt).toLocaleString()}</p>
                `;
                commentsList.appendChild(commentElement);
              });
            }
          
            fetchComments();
          </script>
