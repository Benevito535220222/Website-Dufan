<label class="text-muted mr-3 text-sky-600" for="order-sort">Sort Orders</label>
<select class="form-control" id="order-sort" onchange="updateSort()">
  <option value="date-desc">Date Descending</option>
  <option value="date-asc">Date Ascending</option>
  <option value="price-desc">Price Descending</option>
  <option value="price-asc">Price Ascending</option>
</select>
</div>
</div>

<div class="table-responsive">
  <table class="table table-hover mb-0" style="background-color: white;">
    <thead>
      <tr>
        <th>Order #</th>
        <th>Date Visited</th>
        <th>Status</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% tickets.forEach(ticket => { %>
        <tr>
          <td><%= ticket._id %></td>
          <td><%= ticket.visitDate.toISOString().split('T')[0] %></td>
          <td>
            <% if (ticket.status === 'Approved') { %>
                <span class="badge badge-success m-0"><%= ticket.status %></span>
            <% } else if (ticket.status === 'Rejected') { %>
                <span class="badge badge-danger m-0"><%= ticket.status %></span>
            <% } else { %>
                <span class="badge badge-info m-0"><%= ticket.status %></span>
            <% } %>
        </td>        
          <td>Rp.<%= ticket.totalPrice %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
